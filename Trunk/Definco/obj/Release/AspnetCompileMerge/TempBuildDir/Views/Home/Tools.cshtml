@model Definco.Models.APRmodel
@if (Request.IsAuthenticated) {
    <fieldset>
        <legend>Bereken uw maandelijke aflossing</legend>
        @using (Html.BeginForm("CalculateAPR", "Home",FormMethod.Post)){
            @Html.AntiForgeryToken()
            <ol style="list-style-type: none;">
                <li>
                    @Html.LabelFor(m => m.Principal)
                    @Html.TextBoxFor(m => m.Principal)
                    @Html.ValidationMessageFor(m => m.Principal)
                </li>
                <li>
                    @Html.LabelFor(m => m.InterestPerc)
                    @Html.TextBoxFor(m => m.InterestPerc)
                    @Html.ValidationMessageFor(m => m.InterestPerc)
                </li>
                <li>
                    @Html.LabelFor(m => m.Years)
                    @Html.TextBoxFor(m => m.Years)
                    @Html.ValidationMessageFor(m => m.Years)
                </li>
            </ol>
            <input type="submit" value="Bereken" />

    }
        @if(Model.IsCalculated){
            @:Resultaten berekening:
            <ol style="list-style-type: none;">
                <li>
                    @Html.LabelFor(m => m.MonthlyPay)
                    @Html.DisplayFor(m => m.MonthlyPay)
                    @Html.ValidationMessageFor(m => m.MonthlyPay)
                </li>
                <li>
                    @Html.LabelFor(m => m.MonthsToPay)
                    @Html.DisplayFor(m => m.MonthsToPay)
                    @Html.ValidationMessageFor(m => m.MonthsToPay)
                </li>
                <li>
                    @Html.LabelFor(m => m.TotalPay)
                    @Html.DisplayFor(m => m.TotalPay)
                    @Html.ValidationMessageFor(m => m.TotalPay)
                </li>
            </ol>
    }
    </fieldset>
    <br />
    <br />
}

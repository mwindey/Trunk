                    </a>
                   <hr class="separator pull-right"/>-->

                    @if (Request.IsAuthenticated)
                    {
                        <div class="pull-left">
                            <h3>Welkom @(((UserProfile)Context.Items["LoggedInUser"]).FirstName)</h3>
                            <h4>@(((UserProfile)Context.Items["LoggedInUser"]).LastName)</h4>
                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", style = "font-size:11px;" }))
                            {
                                @Html.AntiForgeryToken()
                                <a href="javascript:document.getElementById('logoutForm').submit()">Logout</a>
                            }
                            <h5>Securitylevel : @(((Enums.SecurityLevels)((UserProfile)Context.Items["LoggedInUser"]).SecurityLevel).ToString())</h5>
                        </div>
                        
                        <a href="/Account/Manage" class="pull-right" style="padding-left:5px;">
                            <img src="~/Content/img/generic-avatar.png" />
                        </a>
                       
                     
                    }
                    else
                    { 
                        <div>U dient @Html.ActionLink("in te loggen", "Login", "Account") of @Html.ActionLink("te registreren", "Register", "Account") alvorens u verder kan gaan !</div>
                    }

                </div>
            </div>
        </div>
    </header>

